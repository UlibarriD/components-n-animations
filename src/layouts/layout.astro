---
interface Props {
  title: string;
}

const { title } = Astro.props;
import Navbar from "@/components/Navbar.astro";
import BackgroundGrid from "@/components/Grid/BackgroundGrid.astro";
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <Navbar />
    <main>
      <slot />
    </main>
  </body>
</html>
<style is:global>
  @import url("../components/Animations/animations.css");

  :root {
    --background: #0c1622;
    --primary: #fff;
  }

  * {
    box-sizing: border-box;
    padding: 0;
    margin: 0;
  }
  html,
  body {
    font-family: sans-serif;
    max-width: 100vw;
    overflow-x: hidden;
    position: relative;
  }
  body {
    background: var(--background);
    color: var(--primary);
  }
  main {
    height: 100vh;
    height: 100svh;
    width: 100%;
    display: flex;
    justify-content: center;
    padding-top: 5rem;
    position: relative;
  }
  a {
    color: inherit;
    text-decoration: none;
  }
</style>
